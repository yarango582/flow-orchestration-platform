# Environment Configuration for Flow Platform Scheduler Engine
# Copy this file to .env and update values as needed

# Application
NODE_ENV=development
PORT=3001
CORS_ORIGIN=*

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=flow_user
DB_PASSWORD=password
DB_DATABASE=flow_platform
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging
LOG_LEVEL=info

# JWT Configuration (for authentication)
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION=24h

# Bull Queue Configuration
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# MongoDB Configuration
MONGODB_URL=mongodb://mongo_user:password@localhost:27017/flow_platform?authSource=admin

# Execution Configuration
MAX_CONCURRENT_EXECUTIONS=10
NODE_EXECUTION_TIMEOUT=30000
RETRY_ATTEMPTS=3
MAX_EXECUTION_RETRIES=3
EXECUTION_TIMEOUT_MS=300000

# Security (Optional - for production)
VAULT_TOKEN=your-vault-token
VAULT_URL=http://localhost:8200

# AWS Secrets Manager (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Node Core Configuration
NODE_CORE_REGISTRY_PATH=../node-core/dist

# External Services (if needed)
# EXTERNAL_API_URL=https://api.example.com
# EXTERNAL_API_KEY=your-api-key

# Development specific
SWAGGER_ENABLED=true
DEBUG_MODE=true